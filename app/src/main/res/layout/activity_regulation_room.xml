<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.dty.reservationapp.RegulationRoomActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="350dp"
            android:background="@drawable/regulation"
            android:orientation="horizontal"
            android:weightSum="10">

            <ImageView
                android:id="@+id/arrow_from_calendar"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:padding="3dp"
                android:src="@mipmap/arrow_back" />

            <TextView
                android:id="@+id/reservationText"
                android:layout_width="wrap_content"
                android:layout_height="101dp"
                android:layout_weight="3"
                android:gravity="center"

                android:text="@string/tv_regulation"
                android:textColor="@color/pink"
                android:textSize="43sp"
                android:textStyle="bold" />


        </LinearLayout>
        <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="10dp"
            android:layout_alignParentBottom="true"
            android:background="@color/light_gray" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="10dp"
            android:src="@mipmap/rules"

            android:layout_alignParentBottom="true"
             />


    </RelativeLayout>
</LinearLayout>
